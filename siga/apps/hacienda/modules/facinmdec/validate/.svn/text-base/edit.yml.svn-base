methods:
  post:
   - "fcdeclar{numdec}"
   - "fcdeclar{fecdec}"
   - "fcdeclar{rifcon}"
   - "fcdeclar{fecfin}"


names:
  fcdeclar{numdec}:
    required:  Yes
    required_msg: El Número de declaración no puede estar en Blanco
    validators: Validator_existencia, Validator_MyString

  fcdeclar{fecdec}:
    required:  Yes
    required_msg: La Fecha  de declaración no puede estar en Blanco
    validators: Fecha2Validator

  fcdeclar{rifcon}:
    required:  Yes
    required_msg: La C.I. / RIF del Contribuyente no puede estar en Blanco
    validators: RifconValidator, Validator_MyString

  fcdeclar{fecfin}:
    required:  No
    required_msg:
    validators: Fecha2Validator

Validator_existencia:
    class: sfPropelUniqueValidator
    param:
        class:        Fcdeclar
        column:       numdec
        unique_error: El Número de declaración ya Existe intente con otra.

Validator_MyString:
    class: sfStringValidator
    param:
        min:       2
        min_error: La referencia no puede tener menos de 2 caracteres
        max:       10
        max_error: La referencia no puede tener mas de 10 caracteres

Fecha2Validator:
    class: sfRegexValidator
    param:
        match:      yes
        pattern:    /^(3[01]|2?[0-9]|1?[0-9]|0?[1-9]|[12]d)\/(0?[1-9]|1[012])\/(\d{4})$/
        match_error: La Fecha  introducida es invalida

RifconValidator:
    class: CidesaExistValidator
    param:
        class:    Fcconrep
        column:   rifcon
        unique_error:   La C.I. / RIF no existe.
