methods:
  post:
   - "liptocuecon{codempadm}"
   - "liptocuecon{codempeje}"
   - "liptocuecon{numptocuecon}"
   - "liptocuecon{numrecofe}"
   - "liptocuecon{fecreg}"
   - "liptocuecon{dias}"
   - "liptocuecon{fecven}"
   - "liptocuecon{detrecomen}"
   - "liptocuecon{resolu}"
   - "liptocuecon{fecrel}"
   - "liptocuecon{decret}"
   - "liptocuecon{fecdec}"
   - "liptocuecon{detdecret}"


names:
  liptocuecon{codempadm}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_codemp

  liptocuecon{codempeje}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_codemp

  liptocuecon{numptocuecon}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_numptocuecon

  liptocuecon{numrecofe}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_numrecofe

  liptocuecon{fecreg}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: FechaValidator

  liptocuecon{dias}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: MyNumberValidator

  liptocuecon{fecven}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: FechaValidator

  liptocuecon{detrecomen}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_detrecomen

  liptocuecon{resolu}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_reldec

  liptocuecon{fecrel}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: FechaValidator

  liptocuecon{decret}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_reldec

  liptocuecon{fecdec}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: FechaValidator

  liptocuecon{detdecret}:
    required:  Yes
    required_msg: Este campo no puede estar en Blanco
    validators: Validator_detrecomen

Validator_codemp:
    class: CidesaExistValidator
    param:
        class:        Lidatstedet
        column:       codemp
        unique_error: El Empleado no existe

Validator_numrecofe:
    class: CidesaExistValidator
    param:
        class:        Lirecomen
        column:       numrecofe
        unique_error: El Expediente no Existe


Validator_numptocuecon:
    class: sfPropelUniqueValidator
    param:
        class:        Liptocuecon
        column:       numptocuecon
        unique_error: El numero ya existe no puede repetirse

FechaValidator:
    class: sfRegexValidator
    param:
        match:      yes
        pattern:    /^(3[01]|2?[0-9]|1?[0-9]|0?[1-9]|[12]d)\/(0?[1-9]|1[012])\/(\d{4})$/
        match_error: La Fecha  introducida es invalida

MyNumberValidator:
    class: CidesaStringValidator
    param:
        values:    [ '/^[0-9]*$/' ]

Validator_detrecomen:
    class: sfStringValidator
    param:
        min:       2
        min_error: La Recomendaci贸n no puede tener menos de 2 caracteres
        max:       1000
        max_error: La Recomendaci贸n no puede pasar mas de 1000 caracteres

Validator_reldec:
    class: sfStringValidator
    param:
        min:       2
        min_error: La Recomendaci贸n no puede tener menos de 2 caracteres
        max:       8
        max_error: La Recomendaci贸n no puede pasar mas de 8 caracteres
